FROM python:3.10-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

RUN apt-get update && \
    apt-get install -y --no-install-recommends curl && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY ./app /app

RUN pip install --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

VOLUME ["/app/data"]

EXPOSE 8000
